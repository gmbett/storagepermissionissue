<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_main_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/main_message" />

    <Button
        android:id="@+id/btn_write_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_main_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/action_write_file"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txt_write_file_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_write_file"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/write_file_message"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>